@{
    ViewBag.Title = "Secret";
}

@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="col-md-4">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">Add Special</h2>
        </div>

        <div class="panel-body">
            <form class="form-horizontal" data-bind="submit: addSpecial">
                <div class="form-group">
                    <label for="inputBar" class="col-sm-2 control-label">Bar</label>
                    <div class="col-sm-10">
                        <select data-bind="options:bars, optionsText: 'Name', value: newSpecial.Bar"></select>
                    </div>
                </div>

                <div class="form-group" data-bind="with: newSpecial">
                    <label for="inputName" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputName" data-bind="value:Name" />
                    </div>

                    <label for="inputPrice" class="col-sm-2 control-label">Price</label>
                    <div class="col-sm-10">
                        <input type="number" step="any" class="form-control" id="inputPrice" data-bind="value:Price" />
                    </div>

                    <label for="inputStartTime">Start Time</label>
                    <input type="text" id="inputStartTime" data-bind="value:StartTime" />

                    <label for="inputEndTime">End Time</label>
                    <input type="text" id="inputEndTime" data-bind="value:EndTime" />
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
</div>

